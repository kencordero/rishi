<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kentheken.rishi"
    android:versionCode="2"
    android:versionName="0.3">
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kentheken.rishi.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.kentheken.rishi.SettingsActivity"
            android:label="@string/action_settings"/>
        <activity
            android:name="com.kentheken.rishi.WordsActivity"
            android:label="@string/activity_words_name"
            android:parentActivityName="com.kentheken.rishi.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name="com.kentheken.rishi.LettersActivity"
            android:label="@string/activity_letters_name"
            android:parentActivityName="com.kentheken.rishi.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
    </application>
</manifest>